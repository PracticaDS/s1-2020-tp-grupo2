<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#92A40F6C"

>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textEncrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:fontFamily="@font/roboto_mono"
            android:text="@string/textEncrypt"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textEncrypt"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_margin="40dp"
            android:text="@string/textTip"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTip"
            android:layout_marginStart="60sp"
            android:layout_marginTop="60sp"
            android:layout_marginEnd="60sp"
            android:layout_marginBottom="60sp"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="8"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="334dp" />

        <Button
            android:id="@+id/buttonEncrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:backgroundTint="#A40F6C"
            android:text="@string/guardar" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>